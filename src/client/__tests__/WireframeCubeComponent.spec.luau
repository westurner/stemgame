--!strict
local WireframeCubeComponent = require(script.Parent.Parent.WireframeCubeComponent)
local React = require(game:GetService("ReplicatedStorage").Packages.React)

describe("WireframeCubeComponent", function()
    it("should exist", function()
        expect(WireframeCubeComponent).to.be.ok()
    end)

    it("should instantiate with default props", function()
        local instance = WireframeCubeComponent.new()
        expect(instance).to.be.ok()
        expect(instance.props.Name).to.equal("WireframeCube1")
        expect(instance.props.blockCenter).to.equal(Vector3.new(0, 20, 15))
        expect(instance.props.blockSize).to.equal(Vector3.new(12, 12, 12))
        expect(instance.props.lineThickness).to.equal(0.2)
        expect(instance.props.lineColor).to.equal(Color3.fromRGB(0, 255, 0))
        expect(instance.props.blockColor).to.equal(Color3.fromRGB(220, 220, 220))
        expect(instance.props.lineMaterial).to.equal(Enum.Material.Neon)
        expect(instance.props.Transparency).to.equal(0.8)
        expect(instance.props.Material).to.equal(Enum.Material.Glass)
        expect(instance.props.Anchored).to.equal(true)
        expect(instance.props.CanCollide).to.equal(false)
    end)
end)