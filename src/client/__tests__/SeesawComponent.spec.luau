--!strict
local SeesawComponent = require(script.Parent.Parent.SeesawComponent)
local React = require(game:GetService("ReplicatedStorage").Packages.React)

describe("SeesawComponent", function()
    it("should exist", function()
        expect(SeesawComponent).to.be.ok()
    end)

    it("should instantiate with default props", function()
        local instance = SeesawComponent.new()
        expect(instance).to.be.ok()
        expect(instance.props.spawnPosition).to.equal(Vector3.new(150, 15, 0))
        expect(instance.props.fulcrumSize).to.equal(Vector3.new(20, 10, 20))
        expect(instance.props.fulcrumColor).to.equal(Color3.fromRGB(25, 99, 184))
        expect(instance.props.fulcrumTransparency).to.equal(0.1)
        expect(instance.props.leverSize).to.equal(Vector3.new(120, 0.1, 20))
        expect(instance.props.leverColor).to.equal(Color3.fromRGB(210, 105, 30))
        expect(instance.props.leverTransparency).to.equal(0.25)
        expect(instance.props.hingeLimits.lower).to.equal(-35)
        expect(instance.props.hingeLimits.upper).to.equal(35)
        expect(instance.props.density).to.equal(0.7)
        expect(instance.props.friction).to.equal(0.3)
        expect(instance.props.elasticity).to.equal(0.5)
        expect(instance.props.frictionWeight).to.equal(1)
        expect(instance.props.elasticityWeight).to.equal(1)
        expect(instance.props.targetAngle).to.equal(0)
        expect(instance.props.servoMaxTorque).to.equal(10000)
        expect(instance.props.angularResponsiveness).to.equal(15)
    end)
end)