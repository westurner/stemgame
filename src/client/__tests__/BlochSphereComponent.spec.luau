--!strict
local BlochSphereComponent = require(script.Parent.Parent.BlochSphereComponent)
local React = require(game:GetService("ReplicatedStorage").Packages.React)

describe("BlochSphereComponent", function()
    it("should exist", function()
        expect(BlochSphereComponent).to.be.ok()
    end)

    it("should instantiate with default props", function()
        local instance = BlochSphereComponent.new()
        expect(instance).to.be.ok()
        expect(instance.props.drawLabels).to.equal(true)
        expect(instance.props.axisColorX).to.equal(Color3.fromRGB(0, 0, 255))
        expect(instance.props.axisColorY).to.equal(Color3.fromRGB(255, 0, 0))
        expect(instance.props.axisColorZ).to.equal(Color3.fromRGB(0, 255, 255))
        expect(instance.props.axisMaterial).to.equal(Enum.Material.Neon)
        expect(instance.props.axisThickness).to.equal(0.1)
        expect(instance.props.axisTransparencyX).to.equal(0)
        expect(instance.props.axisTransparencyY).to.equal(0)
        expect(instance.props.axisTransparencyZ).to.equal(0)
        expect(instance.props.labelOffset).to.equal(1.5)
        expect(instance.props.ringColorXY).to.equal(Color3.fromRGB(100, 100, 100))
        expect(instance.props.ringColorXZ).to.equal(Color3.fromRGB(100, 100, 100))
        expect(instance.props.ringColorYZ).to.equal(Color3.fromRGB(100, 100, 100))
        expect(instance.props.ringMaterial).to.equal(Enum.Material.Neon)
        expect(instance.props.ringThickness).to.equal(0.1)
        expect(instance.props.ringTransparency).to.equal(0)
        expect(instance.props.sphereColor).to.equal(Color3.fromRGB(0, 0, 255))
        expect(instance.props.sphereMaterial).to.equal(Enum.Material.Neon)
        expect(instance.props.sphereRadius).to.equal(5)
        expect(instance.props.sphereTransparency).to.equal(0.5)
    end)
end)
